@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600&display=swap');

:root{
  --black:#010103;
  --white:#F9f9f9;
  --light_white:rgb(221, 216, 216);
  --main_color:#C7a17a;
  --border: .1em  solid Rgb(255, 255, 255, .3);
}

*{
  /* box-sizing: border-box; */
  font-family: 'Poppins', sans-serif;
}

*:focus{
  outline: none;
}

body{
  background-color: var(--black);
}

.background{
  background: url(images/home-img.jpeg);
  background-size: cover;
  background-repeat: no-repeat;
  width: 100%;
  height: 40rem;
}


.btn{
  color: var(--white);
  padding: .5rem 1rem;
  background-color: var(--main_color);
  text-align: center;
  width: 8rem;
  transition: .3s linear;
}

.btn:hover{
  width: 10rem;
  letter-spacing: .1rem;
}

.title{
  font-size: 2.5rem;
  text-align: center;
  text-transform: uppercase;
}

.title .first{
  color: var(--main_color);
}

.title .second{
  color: var(--white);
}

html::-webkit-scrollbar{
  width: .5rem;
}

html::-webkit-scrollbar-track{
  background-color: var(--black);
}

html::-webkit-scrollbar-thumb{
  background-color: var(--white);
  border-radius: 25px;
}

.header .container{
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  border-bottom: var(--border);
  padding: .5rem 0rem;
}

.header .container .logo img{
  cursor: pointer;
  width: 4.5rem;
}

.header .container .navbar ul{
  display: flex;
  gap: 1.5rem;
  list-style-type: none;
}

.header .container .navbar ul li a{
  color: var(--white);
  text-decoration: none;
  text-transform: capitalize;
  font-size: 1rem;
  transition: border-bottom .2s linear, padding-bottom .2s linear;
}

.header .container .navbar ul li a:hover{
  color: #D3ad80;
  border-bottom: .1rem solid #D3ad80;
  padding-bottom: .1rem;
}

.font_awesome .icon{
  display: inline-block;
  color: var(--white);
  font-size: 1.5rem;
  padding-left: 1.5rem;
  cursor: pointer;
  transition: .2s linear;
}

.font_awesome .icon:hover{
  color: #D3ad80;
}

#menu-bar{
  display: none;
}

.heading .content{
  display: inline-block;
  max-width:  35rem;
  padding: 3rem 6rem;
}

.heading .content h2{
  color: var(--white);
  font-size: 3.5rem;
  text-transform: uppercase;
  line-height: 4.5rem;
}

.heading .content p{
  color: var(--white);
  font-size: 1.5rem;
}

.about .container{
  display: flex;
  align-items: center;
  max-width: 70rem;
  background-color: #131419;
  flex-wrap: auto;
  margin-left: auto; margin-right: auto;/* Ã§a permet de centrer horizontalement*/
}

.about .container .image{
  flex: 1 1 41rem;
}

.about .container .image img{
  object-fit: cover;
  object-position: center;
  width: 100%;
}

.about .container .content{
  flex: 1 1 41rem;
  padding-left: 1.5rem;
}

.about .container .content h2{
  color: var(--white);
}

.about .container .content p{
  color: var(--light_white);
  line-height: 2rem;
}

.menu .box-container{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  gap: 1rem;
  text-align: center;
}

.menu .box-container .box{
  text-align: center;
  color: var(--white);
  border: var(--border);
  padding: 3rem 6.5rem;
}

.menu .box-container .box:hover{
  background-color: var(--white);
  color: var(--black);
}

.menu .box-container .box .homebtn{
  padding: .5rem 1rem;
  background-color: var(--main_color);
  text-align: center;
  width: 8rem;
  transition: .3s linear;
}

.menu .box-container .box .homebtn:hover{
  transform: scaleX(1.1);
  letter-spacing: .08rem;
}

.menu .box-container .box img{
  min-width: 6rem;
  height: auto;
}

.box-container .box .price{
  padding: 1rem;
}

.box-container .box .price .non-barre{
  font-size: 1.5rem;
}

.box-container .box .price .barre{
  text-decoration: line-through;
}

.products .box-container{
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  justify-content: center;
  text-align: center;
  align-items: center;
}

.products .box-container .box{
  color: var(--white);
  border: var(--border);
  width: 24rem;
  height: 32rem;
}

.products .box-container .box .icons i{
  font-size: 1.2rem;
  border: var(--border);
  padding: .7rem .7rem;
  margin: 1.5rem .2rem;
}

.products .box-container .box .icons i:hover{
  background-color: var(--main_color);
  cursor: pointer;
}

.products .box-container .box img{
  max-width: 9rem;
  max-height: 15rem;
}

.products .box-container .box h3{
  font-size: 1.5rem;
}

.products .box-container .box .stars i{
  color: var(--main_color);
  font-size: 1.1rem;
}

.reviews .box-container{
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  justify-content: center;
  text-align: center;
  align-items: center;
}

.reviews .box-container .box{
  color: var(--white);
  border: var(--border);
  width: 24rem;
  height: 25rem;
}

.reviews .box-container .box .icons i{
  color: var(--main_color);
  font-size: 3rem;
  padding: 1.5rem .3rem;
  padding-bottom: 0rem;
}

.reviews .box-container .box p{
  font-size: .9rem;
  padding: 0rem 1rem;
  color: var(--white);
  line-height: 1.5rem;
}

.reviews .box-container .box img{
  border-radius: 100%;
  width: 4.5rem;
  padding-top: .5rem;
}

.reviews .box-container .box h3{
  margin: 0rem 0rem;
  padding: 0rem 0rem;
}

.reviews .box-container .box .stars{
  color: var(--main_color);
}

.contact .box-container{
  display: flex;
  align-items: center;
  text-align: center;
  background-color: #131419;
  gap: 2rem;
  margin: 0rem 4.8rem;
  flex-wrap: wrap;
}

.contact .box-container .contact h1{
  color: var(--white);
  text-transform: uppercase;
  font-size: 2.5rem;
}

.contact .box-container .contact .element{
  border: var(--border);
  background-color: var(--black);
  padding: 1rem 1.5rem;
  text-align: left;
  width: 30rem;
  margin-bottom: 1.5rem;
}

.contact .box-container .contact .element i{
  color: var(--white);
  padding-right: 1rem;
  font-size: 1.2rem;
}

.contact .box-container .contact .element input{
  background-color: var(--black);
  border: none;
  font-size: 1rem;
  color: var(--white);
}

.contact .box-container .contact .contactbtn{
  padding: .5rem 1rem;
  background-color: var(--main_color);
  color: var(--white);
  text-align: center;
  width: 8rem;
  transition: .3s linear;
  margin: auto;
}

.contact .box-container .contact .contactbtn:hover{
  transform: scaleX(1.1);
  letter-spacing: .08rem;
}

.blog .box-container{
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  justify-content: center;
  align-items: center;
}

.blog .box-container .box{
  border: var(--border);
  width: 24rem;
  height: auto;
}

.blog .box-container .box .image{
  width: 24rem;
  height: 15rem;
  overflow: hidden;
}

.blog .box-container .box img{
  width: 100%;
  transition: transform .4s;
}

.blog .box-container .box:hover img{
  transform: scale(1.2);
}

.blog .box-container .box #titleone{
  display: block;
  color: var(--white);
  font-size: 1.5rem;
  padding: 1rem 1rem;
}

.blog .box-container .box #titletwo{
  display: block;
  color: var(--main_color);
  font-size: 1.2rem;
  padding-left: 1rem;
}

.blog .box-container .box p{
  color: var(--white);
  font-size: 1rem;
  padding-left: 1rem;
}

.blog .box-container .box .btn{
  margin-left: 1rem;
  margin-bottom: 1rem;
}

.footer{
  margin-top: 1rem;
  background-color: #131419;
}

.footer .icons{
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  gap: .5rem;
  flex-wrap: wrap;
  padding: 1.5rem 0rem;
}

.footer .icons i{
  color: white;
  font-size: 1.2rem;
  padding: .8rem .8rem;
  border: var(--border);
  border-radius: 50%;
}

.footer .icons i:hover{
  background-color: var(--main_color);
  cursor: pointer;
}

.footer .navbar ul{
  list-style-type: none;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  gap: .5rem;
  flex-wrap: wrap;
}

.footer .navbar ul li a{
  color: white;
  text-decoration: none;
  text-transform: capitalize;
  font-size: 1.2rem;
  border: var(--border);
  padding: .3rem 1rem;
}

.footer .navbar ul li a:hover{
  background-color: var(--main_color);
  cursor: pointer;
}

.footer p{
  color: white;
  font-size: 1.2rem;
  padding: 1.5rem 0rem;
  text-align: center;
}

.footer p span{
  color: var(--main_color);
}
















@media (max-width:991px) {
  .header .container{
    justify-content: space-between;
    padding: .5rem .5rem;
  }

  .font_awesome .icon{
    font-size: 1.5rem;
    padding-left: 1rem;
  }

  .header .container .logo img{
    width: 4rem;
  }

  .header .container .navbar ul li a{
    font-size: .8rem;
  }
}

@media (max-width:768px) {

  #menu-bar{
    display: inline-block;
  }

  .header .container .navbar{
    clip-path: inset(0 0 0 100%);
  }

  .header .container .navbar{
    background-color: var(--white);
    text-align: right;
  }

  .header .container .navbar ul li a{
    display: block;
    text-align: left;
  }

  .header .container .navbar:activate{
    clip-path: inset(0 0 0 60%);
  }
}